---
const navItems = [
    { name: "首頁", url: "#" },
    { name: "產品介紹", url: "#" },
    { name: "服務領域", url: "#" },
    { name: "聯絡我們", url: "#" }
];
---

<nav class="bg-black text-white border-b border-gray-600 sticky top-0 z-20">
    <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between h-16">
            <div class="flex items-center">
                <!-- Logo -->
                <div class="flex-shrink-0 flex items-center">
                    <span class="text-primary font-bold text-xl">LOGO</span>
                </div>
                
                <!-- 主導航選項 - 桌面端 -->
                <div class="hidden md:ml-6 md:flex md:space-x-8">
                    {navItems.map(item => (
                        <a href={item.url} class="px-3 py-2 text-sm font-medium hover:text-primary">
                            {item.name}
                        </a>
                    ))}
                </div>
            </div>
            
            <!-- 右側選項 -->
            <div class="flex items-center">
                <button class="px-4 py-2 bg-primary text-black rounded-lg hover:bg-opacity-80 transition-all">
                    聯絡我們
                </button>
                
                <!-- 行動版選單按鈕 -->
                <div class="md:hidden ml-4">
                    <button id="mobile-menu-button" class="text-gray-300 hover:text-white">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- 行動版選單 -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-gray-600">
        <div class="px-2 pt-2 pb-3 space-y-1">
            {navItems.map(item => (
                <a href={item.url} class="block px-3 py-2 text-base font-medium hover:text-primary">
                    {item.name}
                </a>
            ))}
        </div>
    </div>
</nav>

<script>
    // 行動版選單切換
    document.addEventListener('DOMContentLoaded', () => {
        const menuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (menuButton && mobileMenu) {
            menuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }
    });
</script>