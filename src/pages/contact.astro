---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';

// 定義頁面元數據
const pageTitle = "聯絡我們 | 公司名稱";
---

<Layout title={pageTitle}>
    <!-- 固定頂板 -->
    <Navbar />
    
    <!-- 主要內容區域 -->
    <main class="flex flex-col lg:flex-row w-full max-w-7xl mx-auto border border-gray-600 rounded-2xl overflow-hidden shadow-2xl relative bg-black my-4">
        
        <!-- 左側側欄 -->
        <div class="w-full lg:w-1/4 border-b lg:border-b-0 lg:border-r border-gray-600">
            <Sidebar />
        </div>
        
        <!-- 右側內容區 -->
        <div class="w-full lg:w-3/4 p-6">
            <h1 class="text-2xl font-bold text-white mb-6">聯絡我們</h1>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- 表單區塊 -->
                <div class="contact-form-container">
                    <h2 class="text-xl font-semibold text-white mb-4">傳送訊息</h2>
                    
                    <form id="contact-form" class="space-y-4">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-300 mb-1">姓名</label>
                            <input 
                                type="text" 
                                id="name" 
                                name="name" 
                                class="w-full p-2 bg-gray-900 border border-gray-700 rounded-lg focus:border-primary focus:outline-none text-white"
                                placeholder="請輸入您的姓名"
                                required
                            />
                        </div>
                        
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-300 mb-1">電子郵件</label>
                            <input 
                                type="email" 
                                id="email" 
                                name="email" 
                                class="w-full p-2 bg-gray-900 border border-gray-700 rounded-lg focus:border-primary focus:outline-none text-white"
                                placeholder="請輸入您的電子郵件"
                                required
                            />
                        </div>
                        
                        <div>
                            <label for="subject" class="block text-sm font-medium text-gray-300 mb-1">主旨</label>
                            <input 
                                type="text" 
                                id="subject" 
                                name="subject" 
                                class="w-full p-2 bg-gray-900 border border-gray-700 rounded-lg focus:border-primary focus:outline-none text-white"
                                placeholder="請輸入訊息主旨"
                                required
                            />
                        </div>
                        
                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-300 mb-1">訊息內容</label>
                            <textarea 
                                id="message" 
                                name="message" 
                                rows="5" 
                                class="w-full p-2 bg-gray-900 border border-gray-700 rounded-lg focus:border-primary focus:outline-none text-white"
                                placeholder="請輸入您的訊息內容"
                                required
                            ></textarea>
                        </div>
                        
                        <div id="form-status" class="hidden">
                            <p id="success-message" class="text-green-400 hidden">訊息已成功發送！我們將盡快回覆您。</p>
                            <p id="error-message" class="text-red-400 hidden">發送訊息時出錯，請稍後再試。</p>
                        </div>
                        
                        <button 
                            type="submit" 
                            id="submit-button"
                            class="w-full py-2 bg-primary text-black font-medium rounded-lg hover:bg-opacity-90 transition-all form-submit-transition"
                        >
                            送出訊息
                        </button>
                    </form>
                </div>
                
                <!-- 聯絡資訊區塊 -->
                <div class="contact-info-container">
                    <h2 class="text-xl font-semibold text-white mb-4">聯絡資訊</h2>
                    
                    <div class="space-y-6">
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center mr-3">
                                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-white font-medium">地址</h3>
                                <p class="text-gray-400">台北市中山區南京東路二段123號8樓</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center mr-3">
                                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-white font-medium">電話</h3>
                                <p class="text-gray-400">(02) 2345-6789</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center mr-3">
                                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-white font-medium">電子郵件</h3>
                                <p class="text-gray-400">contact@company.com</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start">
                            <div class="flex-shrink-0 w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center mr-3">
                                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-white font-medium">營業時間</h3>
                                <p class="text-gray-400">週一至週五: 9:00 - 18:00</p>
                                <p class="text-gray-400">週六、日: 休息</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- 地圖容器 -->
                    <div class="mt-8 w-full h-48 bg-gray-800 rounded-lg flex items-center justify-center">
                        <p class="text-white">地圖區域</p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- 頁腳 -->
    <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form');
    const submitButton = document.getElementById('submit-button');
    const formStatus = document.getElementById('form-status');
    const successMessage = document.getElementById('success-message');
    const errorMessage = document.getElementById('error-message');
    
    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // 禁用提交按鈕並顯示加載狀態
        if (submitButton) {
          submitButton.disabled = true;
          submitButton.innerHTML = '<span class="inline-block mr-2">發送中</span><svg class="animate-spin -mt-1 h-5 w-5 text-black inline-block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
        }
        
        // 獲取表單數據
        const formData = {
          name: form.name.value,
          email: form.email.value,
          subject: form.subject.value,
          message: form.message.value
        };
        
        try {
          // 發送請求
          const response = await fetch('/api/send-email', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(formData),
          });
          
          const result = await response.json();
          
          // 顯示狀態
          if (formStatus) formStatus.classList.remove('hidden');
          
          if (result.success) {
            // 成功
            if (successMessage) {
              successMessage.classList.remove('hidden');
              errorMessage.classList.add('hidden');
            }
            
            // 添加成功動畫
            form.classList.add('form-submit-success');
            
            // 重置表單
            form.reset();
            
            // 3秒後隱藏成功訊息
            setTimeout(() => {
              if (formStatus) formStatus.classList.add('hidden');
              if (successMessage) successMessage.classList.add('hidden');
              form.classList.remove('form-submit-success');
            }, 5000);
          } else {
            // 錯誤
            if (errorMessage) {
              errorMessage.textContent = result.message || '發送訊息時出錯，請稍後再試。';
              errorMessage.classList.remove('hidden');
              successMessage.classList.add('hidden');
            }
            
            // 添加錯誤動畫
            form.classList.add('form-submit-error');
            
            setTimeout(() => {
              form.classList.remove('form-submit-error');
            }, 1000);
          }
        } catch (error) {
          // 處理錯誤
          console.error('提交表單時出錯:', error);
          if (formStatus) formStatus.classList.remove('hidden');
          if (errorMessage) {
            errorMessage.textContent = '發送訊息時出錯，請稍後再試。';
            errorMessage.classList.remove('hidden');
            successMessage.classList.add('hidden');
          }
          
          // 添加錯誤動畫
          form.classList.add('form-submit-error');
          
          setTimeout(() => {
            form.classList.remove('form-submit-error');
          }, 1000);
        } finally {
          // 恢復提交按鈕
          if (submitButton) {
            submitButton.disabled = false;
            submitButton.innerText = '送出訊息';
          }
        }
      });
    }
  });
</script>

<style>
  .form-submit-transition {
    transition: all 0.3s ease-in-out;
  }

  .form-submit-success {
    animation: success-pulse 1.5s ease-in-out;
  }

  @keyframes success-pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.02); box-shadow: 0 0 20px rgba(52, 211, 153, 0.4); }
    100% { transform: scale(1); }
  }

  .form-submit-error {
    animation: error-shake 0.5s ease-in-out;
  }

  @keyframes error-shake {
    0% { transform: translateX(0); }
    25% { transform: translateX(-10px); }
    50% { transform: translateX(10px); }
    75% { transform: translateX(-10px); }
    100% { transform: translateX(0); }
  }
</style>